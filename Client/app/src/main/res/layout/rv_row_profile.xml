<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_profile_img"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_likes" />

    <TextView
        android:id="@+id/rv_profile_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="full name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_profile_img"
        app:layout_constraintStart_toEndOf="@+id/rv_profile_img"
        app:layout_constraintTop_toTopOf="@+id/rv_profile_img" />

    <TextView
        android:id="@+id/rv_profile_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="age"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_profile_fname"
        app:layout_constraintStart_toEndOf="@+id/rv_profile_fname"
        app:layout_constraintTop_toTopOf="@+id/rv_profile_fname" />

    <TextView
        android:id="@+id/rv_profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="gender"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_profile_age"
        app:layout_constraintStart_toEndOf="@+id/rv_profile_age"
        app:layout_constraintTop_toTopOf="@+id/rv_profile_age" />
</androidx.constraintlayout.widget.ConstraintLayout>